@model SaaSApallaktiki.Models.Team

@{
    ViewData["Title"] = "Create";
    int i = (int)TempData["userId"];
    TempData["userrId"] = i;
}

<h1>How do want your new team to be called?</h1>

@if(TempData["sameNameTeam"] != null)
{
    if ((bool)TempData["sameNameTeam"])
    {
        <h5 style="color:red">
            There is another team with the same name! Please choose a different name for your new team.
        </h5>
    }
}
@* <h4>Team</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Team's name@* <label asp-for="TeamName" class="control-label"></label> *@
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="TeamMembers" asp-action="Index" asp-route-userId="@i">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
